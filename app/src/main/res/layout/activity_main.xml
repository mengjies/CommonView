<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context="com.mj.commonview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_showProBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowProBar" />

        <Button
            android:id="@+id/btn_showEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowEmpty" />

        <Button
            android:id="@+id/btn_showErro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowError" />

    </LinearLayout>

    <com.mj.common_view.CommonView
        android:id="@+id/commonView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:proBarStyle="?android:attr/progressBarStyle"/>

</RelativeLayout>
